{% extends 'layout.html.twig'%}

{% block body %}

{{ parent() }}

<div class="container">
	<div class="col-md-12">
		<div class="page-header margin-none">
			<h2 class="padding-none">Evaluación de Candidatos</h2>
		</div>
		<div class="table-responsive">


			<br>
			<h3 id="titulo1" align="center">Selección de Puesto</h3>
			<br>
			{% if not pagination|length %}
			<h2>No existen registros.</h2>
			{% endif %}

			{% if pagination|length %}
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>{{ knp_pagination_sortable(pagination, 'Nombre', 'p.nombre') }}</th>
						<th>Empresa</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for puesto in pagination %}
					<tr>
						<td>{{ puesto.nombre }}</td>
						<td>{{ puesto.empresa.nombre }}</td>
						<td><a
							href="{{ path('ich_evaluacion_newStep3', { id: puesto.id}) }}"
							class="btn btn-sm btn-default">Seleccionar</a></td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
			{% endif %}

			{# Navigation Bar #}
			<div class="navigation">
				{{ knp_pagination_render(pagination) }}
			</div>
		</div>
	</div>

	<p>
		<a href="{{ path('ich_test_homepage') }}"
			class="btn btn-warning cancelar">Cancelar</a>
	</p>

</div>

{% endblock %}