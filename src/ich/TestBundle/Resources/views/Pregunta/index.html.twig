{% extends 'layout.html.twig'%}

{% block body %}

{{ parent() }}
{# Progress bar #}
	<div class="progress no-border hidden" id="delete-progress">
		<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
			<span class="sr-only">Cargando...</span>
		</div>
	</div>    
{{ include('ichTestBundle:Pregunta:messages/success.html.twig')}}
{{ include('ichTestBundle:Pregunta:messages/danger.html.twig') }}
    <div class="container">
        <div class="col-md-12">
                <div class="page-header margin-none">
                    <h2 class="padding-none">Preguntas</h2>
                </div>
            <div class="table-responsive">
               
                    <div class="col-md-9">
                        <form method="get" action="" class="form-inline" role="search">
                            <div class="form-group">
                                <input type"text" name="query" value="{{ app.request.get('query') }}" class="form-control" placeholder= "Buscar pregunta..." required />
                            </div>
                            <input type="submit" value="Buscar" class="btn btn-default">
                        </form>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('ich_pregunta_add') }}" class="btn btn-lg btn-primary">Nueva Pregunta</a>
                    </div>
                
                <br>
                
                {% if not pagination|length %}
                    <h2>No existen registros.</h2>
                {% endif %}
                
                {% if pagination|length %}
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>    
                            <th>{{ knp_pagination_sortable(pagination, 'Codigo', 'p.codigo') }}</th>   
                            <th>{{ knp_pagination_sortable(pagination, 'Pregunta', 'p.pregunta') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Descripcion', 'p.descripcion') }}</th>
                            <th>Grupo Opciones</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for pregunta in pagination %}
                            <tr data-id={{ pregunta.id }}>
                                <td>{{ pregunta.codigo }}</td>
                                <td>{{ pregunta.pregunta }}</td>
                                <td>{{ pregunta.descripcion }}</td>
                                <td>{{ pregunta.grupoOpciones.nombre }}</td>
                                <td>
                                    {# <a href="{{ path('ich_pregunta_view', { id: pregunta.id }) }}" class="btn btn-sm btn-info">Ver</a> #}
                                    <a href="{{ path('ich_pregunta_edit', { id: pregunta.id }) }}" class="btn btn-sm btn-primary">Editar</a>
                                    <a href="#" class="btn btn-sm btn-danger btn-delete">Borrar</a>  
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% endif %}
                
                {# Navigation Bar #}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{{ include('ichTestBundle:Default:forms/form.html.twig', { form: delete_form_ajax, message: 'Los datos de la Pregunta serán eliminados del sistema. ¿Desea continuar?', id: 'form-delete'}) }}
{% endblock %} 
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('bundles/ichtest/js/delete-pregunta.js') }}"></script>
   
{% endblock %}